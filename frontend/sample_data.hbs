{
  "docs": [
    {{#repeat 3000}}
    {
      "_id": "{{@index}}",
      "title": "{{lorem min=3 max=15}}",
      "section": "{{random 'Sport' 'Végé' 'Plaisir'}}",
      "prepTime": "{{integer min=10 max=120}} minutes",
      "difficulty": "{{random 'Easy' 'Medium' 'Hard'}}",
      "ingredients": [
        {{#repeat min=2 max=6}}
        "{{lorem min=1 max=3}}: {{integer min=10 max=500}} {{random 'g' 'ml' 'cup' 'tbsp' 'tsp'}}"
        {{/repeat}}
      ],
      "steps": [
        {{#repeat min=2 max=5}}
        "{{lorem min=5 max=120}}"
        {{/repeat}}
      ]
    }
    {{/repeat}}
  ]
}

